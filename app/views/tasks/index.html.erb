<header>
  <div class = "burger">
    <%= link_to user_path(current_user) do%>
      <i class="fa fa-bars" aria-hidden="true"></i>
    <% end %>
  </div>
  <div class = "title">
    <h1>My Tasks</h1>
  </div>
  <div class = "search">
    <i class="fa fa-search" aria-hidden="true"></i>
  </div> 
</header>

<div class = "subhead">
  <h2>Total time</h2>
  <h2><%=  %></h2>
</div>

<div class = "container">
  <ul>
    <% @tasks.each do |t| %>
      <li>
        <%= t.title %>
        <%= t.title %>
        <%= t.amount %>
        <%= t.created_at.strftime('%d %b %Y') %>
      </li>
    <% end %>
  </ul>
</div>

<footer>

<div class = "btn-bottom">
  <div class = "btn-inner">
    <h2><%= link_to "New Task", new_task_path %></h2>
  </div>
</div>

</footer>
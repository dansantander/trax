<header>
  <div>
    <i class="fa fa-bars" aria-hidden="true"><%= link_to "Menu", user_path(current_user) %></i>
  </div>
  <h1>My Tasks</h1>
  <div>
    <i class="fa fa-search" aria-hidden="true"></i>
  </div> 
</header>

<section class = "subhead">
  <h2>Total time</h2>
  <h2><%=  %></h2>
</section>

<div class = "container">
  <ul>
    <% @tasks.each do |t| %>
      <li>
        <%= t.title %>
        <%= t.title %>
        <%= t.amount %>
        <%= t.created_at.strftime('%d %b %Y') %>
      </li>
    <% end %>
  </ul>
</div>

<div class = "btn-bottom">
  <div class = "btn-inner">
    <h2><%= link_to "New Task", new_task_path %></h2>
  </div>
</div>
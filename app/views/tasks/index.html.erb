<header>
  <div class = "burger">
    <%= link_to user_path(current_user) do%>
      <i class="fa fa-bars" aria-hidden="true"></i>
    <% end %>
  </div>
  <div class = "title">
    <h1>My Tasks</h1>
  </div>
  <div class = "search">
    <i class="fa fa-search" aria-hidden="true"></i>
  </div> 
</header>

<div class = "subhead">
  <p>Total amount</p>
  <h3>$ <%= @total %></h3>
</div>

<div class = "container">
  <ul>
    <% @tasks.each do |t| %>
      <li>
        <div class="g-icon">
          <%= image_tag(t.groups.first.icon, :class => "icon" , alt: "Profile") unless t.groups.first.nil? %>
        </div>
        <div>
            <div class = "task-info">
              <p><%= t.title %></p>
              <p>$ <%= t.amount %> </p>
            </div>
            <div class = "task-bottom">
              <div class="bottom-info">
                <small><%= t.created_at.strftime('%d %b %Y') %> |</small>
                <small><%= t.groups.first.name unless t.groups.first.nil? %></small>
              </div>
              <div class="btns">
                <div class = "edit-btn">
                  <small><%= link_to "Edit", edit_task_path(t) %></small>
                </div>
                <div class = "del-btn">
                  <small><%= link_to "Delete", task_path(t), method: :delete,
                  data: { confirm: 'Are you sure?' } %></small>
                </div>
              </div>
            </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<footer>
  <%= link_to new_task_path do %>
    <div class = "btn-bottom">
      <div class = "btn-inner">
        <h2> New Task </h2>
      </div>
    </div>
  <% end %>
</footer>

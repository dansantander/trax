<header>
  <div class = "burger">
    <%= link_to tasks_path do%>
      <i class="fas fa-chevron-left"></i>
    <% end %>
  </div>
  <div class = "title">
    <h1>New Task</h1>
  </div>
  <div class = "search">
    <i class="fas fa-ellipsis-v"></i>
  </div> 
</header>

<div class = "container f">
  <%= form_with(model: @task) do |form| %>
    <div class = "form-wrapper">
      <%= form.text_field :title, placeholder: "Title" %>
      <%= form.text_field :amount, placeholder: "Amount" %>
      <%= select_tag(:group, options_for_select(@groups), {:prompt => 'Select group (optional)'})%>

    </div>
    <%= form.submit 'Edit', :class => "btn" %>
  <% end %>
</div>

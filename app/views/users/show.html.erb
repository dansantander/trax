<div class = "wrapper">
  <div class = "profile-img">
    <%= image_tag("https://placeimg.com/100/100/tech", class: "thumbnail", alt: "Profile") %>
    <h1><%= current_user.name %></h1>
  </div>


  <ul>
    <li><i class="fas fa-tasks"></i><%= link_to "My tasks", tasks_path %></li>
    <li><i class="fas fa-list-alt"></i><%= link_to "Other Tasks", tasks_path(type: "external") %></li>
    <li><i class="fas fa-object-group"></i><%= link_to "All groups", groups_path %></li>
    <li><i class="fas fa-sign-out-alt"></i><%= link_to "Log out", signout_path %></li>
  </ul>
</div>
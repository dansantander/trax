<header>
  <div class = "burger">
    <%= link_to groups_path(current_user) do%>
      <i class="fas fa-chevron-left"></i>
    <% end %>
  </div>
  <div class = "title">
    <h1>Create A Group</h1>
  </div>
  <div class = "search">
    <i class="fas fa-ellipsis-v"></i>
  </div> 
</header>

<ul class="error_list">
  <% @group.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>

<div class = "container f">
    <%= form_with(model: @group) do |form| %>
      <div class = "form-wrapper">
        <%= form.text_field :name, placeholder: "Name", :class => "field" %>

      

        <%= form.label :avatar, 'Choose a Profile Photo' %>
        <%= form.file_field(:avatar) %> <br><br>
      </div>

      <%= form.submit 'Create', :class => "btn" %>
    <% end %>
</div>
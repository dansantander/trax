<header>
  <div class = "burger">
    <%= link_to groups_path(current_user) do%>
      <i class="fas fa-chevron-left"></i>
    <% end %>
  </div>
  <div class = "title">
    <h1>Create A Group</h1>
  </div>
  <div class = "search">
    <i class="fas fa-ellipsis-v"></i>
  </div> 
</header>

<div class = "container f">
  <%= form_with(model: @group, local: true) do |form| %>
    <div class = "container f">
      <div class = "form-wrapper">
        <%= form.text_field :name, placeholder: "Name", :class => "field" %>
        <%= form.file_field :avatar, :class => "upload" %>
      </div>

      <%= form.submit 'Create', :class => "btn" %>
  <% end %>
</div>
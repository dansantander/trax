<header>
  <div class = "burger">
    <%= link_to user_path(current_user) do%>
      <i class="fa fa-bars" aria-hidden="true"></i>
    <% end %>
  </div>
  <div class = "title">
    <h1>Groups</h1>
  </div>
  <div class = "search">
    <i class="fa fa-search" aria-hidden="true"></i>
  </div> 
</header>

<div class = "g-container">
  <ul>
    <% @groups.each do |g| %>
      <%= link_to group_path(g) do %>
        <li>
          <div class="g-icon">
            <%= image_tag g.icon, :class => "icon" %>
          </div>
          <div>
            <h3><%= g.name %></h3>
            <small>Created: <%= g.created_at.strftime('%d %b %Y') %></small>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

<footer>
  <%= link_to new_group_path do %>
    <div class = "btn-bottom">
      <div class = "btn-inner">
        <h2> Create New </h2>
      </div>
    </div>
  <% end %>
</footer>
<header>
  <div>
    <i class="fa fa-bars" aria-hidden="true"><%= link_to "Menu", user_path(current_user) %></i>
  </div>
  <h1>Groups</h1>
  <div>
    <i class="fa fa-search" aria-hidden="true"></i>
  </div> 
</header>

<section class = "subhead">
  <h2>Total time</h2>
  <h2><%=  %></h2>
</section>

<div class = "container">
  <ul>
    <% @groups.each do |g| %>
      <li>
        <%= image_tag g.icon %>
        <%= g.name %>
        <%= g.created_at.strftime('%d %b %Y') %>
      </li>
    <% end %>
  </ul>
</div>

<div class = "btn-bottom">
  <div class = "btn-inner">
    <h2><%= link_to "Create New", new_group_path %></h2>
  </div>
</div>